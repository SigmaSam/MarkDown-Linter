# rubocop:disable Metrics/MethodLength

class Scaner
  def initialize
    @open_sym = ['*', '**', '`', '[', '(']
  end

  def scan_file(file)
    count = 0
    index_location = []
    file.readlines.each_with_index do |line, loc|
      next if line.split(' ') == []

      line.split(' ').each do |j|
        next if j.include?(open_sym[j.to_i])

        index_location.push(loc + 1)
        count += 1
        break
      end
    end
    p index_location
  end
end
# rubocop:enable Metrics/MethodLength
